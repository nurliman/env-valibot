{
  "name": "@nurliman/env-valibot-root",
  "packageManager": "pnpm@8.14.1",
  "private": true,
  "type": "module",
  "workspaces": [
    "docs",
    "examples/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo build --filter @nurliman/env*",
    "dev": "turbo dev --filter @nurliman/env*",
    "lint": "biome check .",
    "lint:fix": "biome check . --apply",
    "test": "turbo test",
    "typecheck": "turbo typecheck",
    "version-packages": "changeset version",
    "release": "npm run build && npm run lint:fix && npm run typecheck && npm run test --filter @nurliman/env* && changeset publish"
  },
  "dependencies": {
    "@biomejs/biome": "1.5.3",
    "@changesets/changelog-github": "^0.4.8",
    "@changesets/cli": "^2.26.1",
    "@types/node": "^18.15.13",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "eslint": "^8.39.0",
    "turbo": "^1.9.3",
    "typescript": "^5.3.3"
  },
  "devDependencies": {
    "@tsconfig/node18": "^18.2.2"
  }
}
