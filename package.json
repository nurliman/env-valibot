{
  "name": "@nurliman/env-valibot-root",
  "packageManager": "pnpm@8.15.4",
  "private": true,
  "type": "module",
  "workspaces": [
    "docs",
    "examples/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo build --filter @nurliman/env*",
    "dev": "turbo dev --filter @nurliman/env*",
    "lint": "biome check .",
    "lint:fix": "biome check . --apply",
    "test": "turbo test",
    "typecheck": "turbo typecheck",
    "version-packages": "changeset version",
    "release": "npm run build && npm run lint && npm run typecheck && npm run test --filter @nurliman/env* && changeset publish"
  },
  "dependencies": {
    "@biomejs/biome": "1.6.0",
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.1",
    "@types/node": "^20",
    "turbo": "^1.12.5",
    "typescript": "^5.4.2"
  },
  "devDependencies": {
    "@tsconfig/node18": "^18.2.2"
  }
}
